    .form__container
      .container__title
        %p 会員情報入力
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .user__field
          .private__field
            = f.label :"ニックネーム"
            = f.label :"必須", class: "field__require"
            %br/
            = f.text_field :nickname, placeholder: "例)フリマ太郎"
          .private__field
            = f.label :"メールアドレス"
            = f.label :"必須", class: "field__require"
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "@・ドメイン含む"
          .private__field
            = f.label :"パスワード"
            = f.label :"必須", class: "field__require"
            -# - if @minimum_password_length
            -#   %em
            -#     (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
          .private__field
            = f.label :"パスワード確認"
            = f.label :"必須", class: "field__require"
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上の半角英数字"
          .page__word
            %p ※ 英字と数字の両方を含めて設定してください
          .check__box
            = check_box_tag :password
            = label_tag :"パスワードを表示する"
          .private__field
            = f.label :"電話番号"
            = f.label :"必須", class: "field__require"
            %br/
            = f.telephone_field :phone_number, placeholder: "080-1234-5678"
          .private__check
